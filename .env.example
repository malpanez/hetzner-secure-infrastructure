# Hetzner Cloud Configuration
export HCLOUD_TOKEN="your-hetzner-cloud-api-token-here"
export TF_VAR_hcloud_token="${HCLOUD_TOKEN}"

# Cloudflare Configuration (Optional - for automatic DNS management)
# Get token from: https://dash.cloudflare.com/profile/api-tokens
# Use template: "Edit zone DNS" for your domain
export CLOUDFLARE_API_TOKEN="your-cloudflare-api-token-here"
export TF_VAR_cloudflare_api_token="${CLOUDFLARE_API_TOKEN}"

# SSH Configuration
export TF_VAR_ssh_public_key="$(cat ~/.ssh/id_ed25519.pub)"
export TF_VAR_admin_username="malpanez"

# SECURITY: Your public IP for SSH access
# Get your IP: curl -4 ifconfig.me
export TF_VAR_ssh_allowed_ips='["YOUR.PUBLIC.IP.HERE/32"]'

# Example with real IP:
# export TF_VAR_ssh_allowed_ips='["203.0.113.42/32"]'

# For multiple IPs:
# export TF_VAR_ssh_allowed_ips='["203.0.113.42/32","198.51.100.10/32"]'
