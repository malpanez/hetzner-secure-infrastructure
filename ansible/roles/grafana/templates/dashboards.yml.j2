# Grafana Dashboards Provisioning
# Generated by Ansible - Do not edit manually

apiVersion: 1

providers:
  - name: 'Ansible Managed'
    org_id: 1
    orgId: 1
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      path: {{ grafana_dashboards_dir }}
      foldersFromFilesStructure: false

{% for provider in grafana_dashboard_providers %}
  - name: '{{ provider.name }}'
    orgId: {{ provider.org_id | default(1) }}
    folder: '{{ provider.folder | default("") }}'
    type: {{ provider.type | default('file') }}
    disableDeletion: {{ provider.disable_deletion | default(false) | lower }}
    updateIntervalSeconds: {{ provider.update_interval | default(30) }}
    allowUiUpdates: {{ provider.allow_ui_updates | default(true) | lower }}
    options:
      path: {{ provider.path }}
{% endfor %}
