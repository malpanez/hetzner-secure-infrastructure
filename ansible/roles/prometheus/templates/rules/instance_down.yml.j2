---
# Instance Down Alert Rules

groups:
  - name: instance_availability
    interval: 30s
    rules:
      - alert: InstanceDown
        expr: up == 0
        for: 5m
        labels:
          severity: critical
          category: availability
        annotations:
          summary: "Instance {{ $labels.instance }} is down"
          description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 5 minutes."

      - alert: InstanceFlapping
        expr: changes(up[10m]) > 5
        for: 5m
        labels:
          severity: warning
          category: availability
        annotations:
          summary: "Instance {{ $labels.instance }} is flapping"
          description: "{{ $labels.instance }} has changed state more than 5 times in 10 minutes."
