# Loki Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

auth_enabled: false

server:
  http_listen_port: {{ loki_http_listen_port }}
  grpc_listen_port: {{ loki_grpc_listen_port }}
  log_level: info

common:
  path_prefix: {{ loki_data_dir }}
  storage:
    filesystem:
      chunks_directory: {{ loki_data_dir }}/chunks
      rules_directory: {{ loki_data_dir }}/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

# Schema configuration
schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: index_
        period: 24h

# Storage configuration
storage_config:
  tsdb_shipper:
    active_index_directory: {{ loki_data_dir }}/tsdb-index
    cache_location: {{ loki_data_dir }}/tsdb-cache
  filesystem:
    directory: {{ loki_data_dir }}/chunks

# Compactor (cleanup old data)
compactor:
  working_directory: {{ loki_compactor_working_directory }}
  compaction_interval: 10m
  retention_enabled: {{ loki_compactor_retention_enabled | lower }}
  retention_delete_delay: {{ loki_compactor_retention_delete_delay }}
  retention_delete_worker_count: 150
  delete_request_store: filesystem

# Limits configuration
limits_config:
  # Ingestion limits
  ingestion_rate_mb: {{ loki_ingestion_rate_mb }}
  ingestion_burst_size_mb: {{ loki_ingestion_burst_size_mb }}

  # Query limits
  max_query_series: {{ loki_max_query_series }}
  max_query_parallelism: {{ loki_max_query_parallelism }}

  # Retention
  reject_old_samples: {{ loki_reject_old_samples | lower }}
  reject_old_samples_max_age: {{ loki_reject_old_samples_max_age }}
  retention_period: {{ loki_retention_period }}

  # Per-stream limits
  per_stream_rate_limit: 3MB
  per_stream_rate_limit_burst: 15MB
  max_streams_per_user: 0  # unlimited
  max_global_streams_per_user: 5000

  # Chunk limits
  max_chunks_per_query: 2000000
  max_query_lookback: {{ loki_max_look_back_period }}

# Chunk configuration
chunk_store_config:
  chunk_cache_config:
    enable_fifocache: true
    fifocache:
      max_size_bytes: 1GB
      ttl: 1h

# Table manager
table_manager:
  retention_deletes_enabled: {{ loki_compactor_retention_enabled | lower }}
  retention_period: {{ loki_retention_period }}

# Ruler (alerting - optional)
{% if loki_enable_ruler %}
ruler:
  storage:
    type: local
    local:
      directory: {{ loki_data_dir }}/rules
  rule_path: {{ loki_data_dir }}/rules-temp
  alertmanager_url: http://localhost:9093
  ring:
    kvstore:
      store: inmemory
  enable_api: true
{% endif %}

# Analytics (disable telemetry)
analytics:
  reporting_enabled: false
