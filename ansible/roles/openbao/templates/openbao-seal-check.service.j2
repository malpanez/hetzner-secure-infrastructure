[Unit]
Description=OpenBao Seal Status Check
After=network.target openbao.service
Wants=openbao.service

[Service]
Type=oneshot
User=root
ExecStart=/usr/local/bin/check-openbao-sealed.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=openbao-seal-check

# Alert on failure (when OpenBao is sealed)
# This will be visible in systemd status and can trigger alerts
SuccessExitStatus=0
OnFailure=openbao-sealed-alert.service

[Install]
WantedBy=multi-user.target
