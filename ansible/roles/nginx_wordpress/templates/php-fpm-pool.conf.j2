[{{ wordpress_domain }}]

user = {{ wordpress_user }}
group = {{ wordpress_group }}

listen = {{ php_fpm_socket }}
listen.owner = {{ wordpress_user }}
listen.group = {{ wordpress_group }}
listen.mode = 0660

; Process manager settings
pm = {{ nginx_wordpress_php_fpm_pm }}
pm.max_children = {{ nginx_wordpress_php_fpm_max_children }}
pm.start_servers = {{ nginx_wordpress_php_fpm_start_servers }}
pm.min_spare_servers = {{ nginx_wordpress_php_fpm_min_spare_servers }}
pm.max_spare_servers = {{ nginx_wordpress_php_fpm_max_spare_servers }}
pm.max_requests = {{ nginx_wordpress_php_fpm_max_requests }}

; Performance tuning
pm.process_idle_timeout = {{ nginx_wordpress_php_fpm_process_idle_timeout }}
request_terminate_timeout = {{ nginx_wordpress_php_max_execution_time }}s

; Status page for monitoring
pm.status_path = /php-fpm-status
ping.path = /php-fpm-ping

; Logging
php_admin_value[error_log] = /var/log/php{{ php_version }}-fpm-{{ wordpress_domain }}.log
php_admin_flag[log_errors] = on

; Security: Hide PHP version
php_admin_value[expose_php] = Off

; Memory and upload limits (WordPress + Tutor LMS)
php_admin_value[memory_limit] = {{ php_memory_limit }}
php_admin_value[upload_max_filesize] = {{ php_upload_max_filesize }}
php_admin_value[post_max_size] = {{ php_post_max_size }}
php_admin_value[max_execution_time] = {{ php_max_execution_time }}
php_admin_value[max_input_time] = {{ php_max_input_time }}
php_admin_value[max_input_vars] = {{ php_max_input_vars }}

; Opcache settings (performance boost)
php_admin_value[opcache.enable] = 1
php_admin_value[opcache.memory_consumption] = 128
php_admin_value[opcache.interned_strings_buffer] = 8
php_admin_value[opcache.max_accelerated_files] = 10000
php_admin_value[opcache.revalidate_freq] = 60
php_admin_value[opcache.fast_shutdown] = 1

; Security hardening
php_admin_value[disable_functions] = exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source
php_admin_value[allow_url_fopen] = Off  ; Prevent remote file includes
php_admin_value[allow_url_include] = Off

; Session settings
php_admin_value[session.save_handler] = files
php_admin_value[session.save_path] = /var/lib/php/sessions
php_admin_value[session.gc_maxlifetime] = 1440
php_admin_value[session.cookie_httponly] = On
php_admin_value[session.cookie_secure] = On  ; HTTPS only
php_admin_value[session.use_strict_mode] = On

; Environment variables
env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp
