# Nginx Reverse Proxy for Prometheus
# Managed by Ansible - nginx_wordpress role

{% if nginx_wordpress_ssl_enabled %}
server {
    listen 80;
    listen [::]:80;
    server_name prometheus.{{ nginx_wordpress_server_name | default('_') }};

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name prometheus.{{ nginx_wordpress_server_name | default('_') }};

    ssl_certificate {{ nginx_wordpress_ssl_cert_path }};
    ssl_certificate_key {{ nginx_wordpress_ssl_key_path }};
    include snippets/ssl-params.conf;
{% else %}
server {
    listen 80;
    listen [::]:80;
    server_name prometheus.{{ nginx_wordpress_server_name | default('_') }};
{% endif %}

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Access and error logs
    access_log /var/log/nginx/prometheus_access.log;
    error_log /var/log/nginx/prometheus_error.log;

    # Reverse proxy to Prometheus
    location / {
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (for live updates)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check endpoint
    location /health {
        access_log off;
        proxy_pass http://127.0.0.1:9090/-/healthy;
    }
}
